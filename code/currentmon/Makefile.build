# Project name
PROJNAME := currentmon

# MCU properties
MCU_CLOCK := 16000000
MCU_UNIT := atmega88

# Source files
OBJS := \
	ADC.o \
	CurrentMonitor.o \
	Delay.o \
	SignalProcessing.o \
	SPISlaveImplementation.o \
	SPISlave.o

LIBOBJS :=

# Build options
CFLAGS = -std=c11 -Wall -Werror -Wunused -Wuninitialized -Wno-inline -Woverflow -Os -fshort-enums -mmcu=$(MCU) -DF_CPU=$(MCU_CLOCK)UL -g -DSPI_SLAVE

HALINPUT := HAL.xml

#CFLAGS += -ffunction-sections
